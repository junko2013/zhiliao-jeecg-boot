<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.InvitationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.Invitation">
        <id column="id" property="id" />
        <result column="inviter_id" property="inviterId" />
        <result column="user_id" property="userId" />
        <result column="ts_create" property="tsCreate" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, inviter_id, user_id, ts_create
    </sql>

    <select id="pagination" resultMap="BaseResultMap">
        select * from im_invitation i
        <where>1=1
            <if test="q.inviterId!=null">
                and inviter_id = #{q.inviterId}
            </if>
            <if test="q.userId!=null">
                and user_id = #{q.userId}
            </if>
            <if test="q.serverId!=null">
                and server_id = #{q.serverId}
            </if>
            <if test="q.tsCreate!=null">
                and ts_create &lt;= UNIX_TIMESTAMP(#{q.tsCreate})*1000
            </if>
        </where>
        <if test="q.column !=null and q.column!='' and q.order!=null and q.order!=''">
            order by ${q.column} ${q.order}
        </if>
    </select>

</mapper>
