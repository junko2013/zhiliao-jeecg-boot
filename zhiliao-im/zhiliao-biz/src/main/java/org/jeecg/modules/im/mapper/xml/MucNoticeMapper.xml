<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.MucNoticeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.MucNotice">
        <id column="id" property="id" />
        <result column="muc_id" property="mucId" />
        <result column="content" property="content" />
        <result column="alert_show" property="alertShow" />
        <result column="need_confirm" property="needConfirm" />
        <result column="cover" property="cover" />
        <result column="del_flag" property="delFlag" />
        <result column="status" property="status" />
        <result column="ts_pin" property="tsPin" />
        <result column="show_modify_nickname" property="showModifyNickname" />
        <result column="ts_create" property="tsCreate" />
        <result column="creator_id" property="creatorId" />
        <collection property="readList" ofType="org.jeecg.modules.im.entity.MucNoticeRead">
            <id column="mnr_id" property="id" />
            <result column="member_id" property="memberId" />
            <result column="ts_read" property="tsRead" />
            <result column="ts_confirm" property="tsConfirm" />
            <association property="member" javaType="org.jeecg.modules.im.entity.MucMember">
                <id column="m_id" property="id" />
                <result column="nickname" property="nickname" />
            </association>
        </collection>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, muc_id, content, alert_show, need_confirm, cover,del_flag,status, ts_pin, show_modify_nickname, ts_create, creator_id
    </sql>

    <select id="findAll" resultType="org.jeecg.modules.im.entity.MucNotice">
        SELECT
            mn.id, mn.muc_id, content, alert_show, need_confirm, cover,del_flag,mn.status, mn.ts_pin, show_modify_nickname, ts_create, creator_id,
            mnr.id mnr_id,mnr.ts_read,mnr.ts_confirm,mnr.member_id,
            m.id m_id,m.nickname
        FROM im_muc_notice mn
        left join im_muc_notice_read mnr on mnr.notice_id = mn.id
        left join im_muc_member m on m.id = mnr.member_id
        <where>
            1=1
            <if test="q.mucId!=null">
                and mn.muc_id = #{q.mucId}
            </if>
        </where>
    </select>
    <select id="selectLogicDeleted" resultType="org.jeecg.modules.im.entity.MucNotice">
        SELECT * FROM im_muc_notice ${ew.customSqlSegment}
    </select>

    <update id="revertLogicDeleted">
        UPDATE
        im_muc_notice
        SET
        del_flag = 0
        WHERE
        del_flag = 1
        AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </update>

    <delete id="deleteLogicDeleted">
        DELETE FROM im_muc_notice WHERE del_flag = 1 AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </delete>

</mapper>
