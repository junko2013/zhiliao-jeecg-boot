<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.ChatBgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.ChatBg">
        <id column="id" property="id" />
        <result column="thumb" property="thumb" />
        <result column="origin" property="origin" />
        <result column="order_no" property="orderNo" />
        <result column="use_times" property="useTimes" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="ts_create" property="tsCreate" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, thumb, origin, order_no, use_times,status,del_flag,ts_create
    </sql>

    <select id="paginationApi" resultMap="BaseResultMap">
        select * from im_chat_bg
        where del_flag = 0
        order by order_no desc,use_times desc,ts_create desc
    </select>
    <select id="findAll" resultMap="BaseResultMap">
        select * from im_chat_bg
        where del_flag = 0
        order by order_no desc,use_times desc,ts_create desc
    </select>

    <select id="selectLogicDeleted" resultType="org.jeecg.modules.im.entity.ChatBg">
        SELECT * FROM im_chat_bg ${ew.customSqlSegment}
    </select>

    <update id="revertLogicDeleted">
        UPDATE
        im_chat_bg
        SET
        del_flag = 0
        WHERE
        del_flag = 1
        AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </update>

    <delete id="deleteLogicDeleted">
        DELETE FROM im_chat_bg WHERE del_flag = 1 AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </delete>

</mapper>
