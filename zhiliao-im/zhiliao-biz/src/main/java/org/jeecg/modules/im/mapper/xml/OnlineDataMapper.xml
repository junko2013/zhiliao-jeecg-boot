<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.OnlineDataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.OnlineData">
        <id column="id" property="id" />
        <result column="date" property="date" />
        <result column="ts_create" property="tsCreate" />
        <result column="user" property="user" />
        <result column="device" property="device" />
        <result column="total_user" property="totalUser" />
        <result column="total_device" property="totalDevice" />
        <result column="server_id" property="serverId" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, date, ts_create, user, device, total_user, total_device
    </sql>

    <select id="pagination" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" /> from im_online_data
        <where>
            <if test="q.serverId!=null">
                and server_id=#{q.serverId}
            </if>
        </where>
        <if test="q.column !=null and q.column!='' and q.order!=null and q.order!=''">
            order by ${q.column} ${q.order}
        </if>
    </select>
    <select id="findByDateOfServer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" /> from im_online_data
        where server_id = #{serverId} and date = #{date}
    </select>

</mapper>
