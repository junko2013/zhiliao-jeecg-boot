<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.FeedbackMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.Feedback">
        <id column="id" property="id" />
        <result column="type_id" property="typeId" />
        <result column="user_id" property="userId" />
        <result column="ts_create" property="tsCreate" />
        <result column="img_url" property="imgUrl" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="reply" property="reply" />
        <result column="contact" property="contact" />
        <result column="ts_deal" property="tsDeal" />
        <result column="server_id" property="serverId" />
        <result column="del_flag" property="delFlag" />
        <association property="user" javaType="org.jeecg.modules.im.entity.User">
            <id column="u_id" property="id"/>
            <result column="u_nickname" property="nickname"/>
            <result column="u_account" property="account"/>
            <result column="u_small_avatar" property="smallAvatar"/>
            <result column="u_is_online" property="isOnline"/>
            <result column="u_ts_create" property="tsCreate"/>
            <association property="info" javaType="org.jeecg.modules.im.entity.UserInfo">
                <id column="ui_id" property="id" />
                <result column="ui_province" property="province" />
                <result column="ui_city" property="city" />
                <result column="ui_district" property="district" />
                <result column="ui_country" property="country" />
                <result column="ui_gender" property="gender" />
            </association>
        </association>
        <association property="type" javaType="org.jeecg.modules.im.entity.FeedbackType">
            <id column="ft_id" property="id" />
            <result column="ft_title" property="title" />
            <result column="ft_message" property="message" />
        </association>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, type_id, user_id, ts_create, img_url, title,content,reply, contact, ts_deal,del_flag
    </sql>

    <select id="pagination" resultMap="BaseResultMap">
        select f.id, f.type_id, f.user_id, f.ts_create, f.img_url, f.title,f.content,f.reply, f.contact, f.ts_deal,f.del_flag,
           u.id u_id,u.nickname u_nickname,u.account u_account,u.small_avatar u_small_avatar,u.is_online u_is_online,u.ts_create u_ts_create,
           ui.id ui_id,ui.province ui_province,ui.city ui_city,ui.country ui_country,ui.district ui_district,ui.gender ui_gender,
           ft.id ft_id,ft.title ft_title,ft.message ft_message
        from im_feedback f
         left join im_feedback_type ft on ft.id = f.type_id
         left join im_user u on u.id = f.user_id
         left join im_user_info ui on ui.user_id = u.id
        <where>del_flag = 0
            <if test="q.isDeal==true">
                and ts_deal >0
            </if>
            <if test="q.isDeal==false">
                and ts_deal = 0
            </if>
            <if test="q.userSearch!=null and q.userSearch!=''">
                and(u.nickname like concat('%',#{q.userSearch},'%') or u.account like concat('%',#{q.userSearch},'%') or u.username like concat('%',#{q.userSearch},'%') or u.mobile like concat('%',#{q.userSearch},'%'))
            </if>
        </where>
        order by ts_create desc
    </select>
    <select id="paginationApi" resultMap="BaseResultMap">
        select * from im_feedback where user_id = #{q.userId} and del_flag = 0 order by ts_create desc
    </select>

    <select id="selectLogicDeleted" resultType="org.jeecg.modules.im.entity.Feedback">
        SELECT * FROM im_feedback ${ew.customSqlSegment}
    </select>

    <update id="revertLogicDeleted">
        UPDATE
        im_feedback
        SET
        del_flag = 0
        WHERE
        del_flag = 1
        AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </update>

    <delete id="deleteLogicDeleted">
        DELETE FROM im_feedback WHERE del_flag = 1 AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </delete>
</mapper>
