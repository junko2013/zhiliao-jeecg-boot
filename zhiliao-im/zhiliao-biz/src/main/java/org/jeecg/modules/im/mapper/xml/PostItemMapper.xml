<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.PostItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.PostItem">
        <id column="id" property="id" />
        <result column="post_id" property="postId" />
        <result column="origin" property="origin" />
        <result column="thumb" property="thumb" />
        <result column="url" property="url" />
        <result column="w" property="w" />
        <result column="h" property="h" />
        <result column="size" property="size" />
        <result column="type" property="type" />
        <result column="order_no" property="orderNo" />
        <result column="duration" property="duration" />
        <result column="ts_create" property="tsCreate" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, post_id, origin, thumb, url, w, h, size, type, order_no, duration,ts_create
    </sql>

    <select id="getByPostId" resultMap="BaseResultMap">
        select * from im_post_item where post_id = #{postId} order by order_no asc,ts_create asc
    </select>

</mapper>
