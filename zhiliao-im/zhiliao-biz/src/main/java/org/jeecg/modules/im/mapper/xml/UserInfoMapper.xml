<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.UserInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.UserInfo">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="province" property="province" />
        <result column="city" property="city" />
        <result column="district" property="district" />
        <result column="country" property="country" />
        <result column="country_code" property="countryCode" />
        <result column="country_dial_code" property="countryDialCode" />
        <result column="gender" property="gender" />
        <result column="signature" property="signature" />
        <result column="balance" property="balance" />
        <result column="balance_freeze" property="balanceFreeze" />
        <result column="coin" property="coin" />
        <result column="sign_in_day" property="signInDay" />
        <result column="state" property="state" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,user_id,province, city, district, country,country_code,country_dial_code, gender, signature, coin,balance, balance_freeze, sign_in_day, state
    </sql>

    <select id="findByUserId" resultType="org.jeecg.modules.im.entity.UserInfo">
        select <include refid="Base_Column_List" /> from im_user_info i
        where user_id = #{userId}
    </select>

</mapper>
