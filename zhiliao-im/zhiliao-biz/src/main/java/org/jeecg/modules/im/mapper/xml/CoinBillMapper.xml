<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.CoinBillMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.CoinBill">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="type" property="type" />
        <result column="amount" property="amount" />
        <result column="balance" property="balance" />
        <result column="is_increase" property="isIncrease" />
        <result column="reason" property="reason" />
        <result column="ts_create" property="tsCreate" />
        <result column="note" property="note" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, type, amount, balance, is_increase, reason, ts_create, note
    </sql>

    <select id="getAmount" resultType="java.lang.Integer">
        SELECT
            SUM(CASE WHEN is_increase = 1 THEN amount ELSE -amount END) AS amount
        FROM im_coin_bill
        <where>
            1=1
           <if test="q.userId!=null">
               and user_id = #{q.userId}
           </if>
           <if test="q.types!=null">
               AND type IN
                <foreach collection="q.types" item="type" open="(" close=")" separator="," >
                   #{type}
               </foreach>
            </if>
        </where>
    </select>

</mapper>
