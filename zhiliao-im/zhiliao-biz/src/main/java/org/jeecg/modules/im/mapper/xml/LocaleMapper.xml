<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.LocaleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.Locale">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="language_code" property="languageCode" />
        <result column="country_code" property="countryCode" />
        <result column="identity" property="identity" />
        <result column="content" property="content" />
        <result column="status" property="status" />
        <result column="ts_create" property="tsCreate" />
        <result column="user_id" property="userId" />
        <result column="order_no" property="orderNo" />
        <result column="del_flag" property="delFlag" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, language_code, country_code,identity,content, status, ts_create, user_id, order_no,del_flag
    </sql>

    <select id="selectLogicDeleted" resultType="org.jeecg.modules.im.entity.Locale">
        SELECT * FROM im_locale ${ew.customSqlSegment}
    </select>

    <update id="revertLogicDeleted">
        UPDATE
        im_locale
        SET
        del_flag = 0
        WHERE
        del_flag = 1
        AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </update>

    <delete id="deleteLogicDeleted">
        DELETE FROM im_locale WHERE del_flag = 1 AND id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </delete>

</mapper>
